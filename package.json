{
  "name": "api",
  "version": "0.0.1",
  "description": "Server ts-nest-graphql-microservice-nats-docker",
  "author": "BipRaider",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",

    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json",

    "docker:up": "docker-compose up -d",

    "docker:up:api": "docker-compose rm -sf api && docker-compose -f docker-compose.yaml up -d api",
    "docker:up:user": "docker-compose rm -sf user && docker-compose -f docker-compose.yaml up -d user",
    "docker:up:product": "docker-compose rm -sf product && docker-compose -f docker-compose.yaml up -d product",
    "docker:up:order": "docker-compose rm -sf order && docker-compose -f docker-compose.yaml up -d order",

    "docker:stop": "docker-compose stop api",
    "docker:stop:user": "docker-compose stop user",
    "docker:stop:product": "docker-compose stop product",
    "docker:stop:order": "docker-compose stop order",

    "docker:log": "docker-compose logs -f --tail 100 api",
    "docker:log:user": "docker-compose logs -f --tail 100 user",
    "docker:log:product": "docker-compose logs -f --tail 100 product",
    "docker:log:order": "docker-compose logs -f --tail 100 order",

    "docker:node": "docker-compose exec api node",
    "docker:node:user": "docker-compose exec user node",
    "docker:node:product": "docker-compose exec product node",
    "docker:node:order": "docker-compose exec order node",

    "docker:clear": "docker volume prune"
  },
